<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../public/img/logouteC.png" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="../public/css/home.css">
    <title>Adulto Mayor | Home</title>
</head>

<body>
    <aside>
        <nav>
            <h5>Adulto Mayor</h5>
            <div class="datos">
                <figure>
                    <img src=" <%= typeof file != 'undefined' ? file : '' %>" class="responsive-file">
                </figure>
                <div class="info">
                    <h4><%= `${user.nombres} ${user.apat} ${user.amat}` %></h4>
                    <h4><%= `Registro: ${user.registro}` %></h4>
                    <h4><%= `CI: ${user.ci}` %></h4>
                    <h4><%= `Email: ${user.email}` %></h4>
                    <h4><%= `Cel: ${user.telf}` %></h4>
                    <h4><%= `Voluntario: ${user.nombre}` %></h4>
                </div>
            </div>
            <hr>
            <ul>
                <li>
                    <a href=""><span><i class="material-icons prefix">person</i></span> Principal</a>
                </li>
                <li>
                    <a href=""><span><i class="material-icons prefix">account_circle</i></span> Asistencia</a>
                </li>
                <li>
                    <a href=""><span><i class="material-icons prefix">content_paste</i></span> Reportes</a>
                </li>
            </ul>
        </nav>
        <figure>
            <img src="../public/img/logouteC.png" alt="">
            <h6>Centro de Desarrollo</h6>
        </figure>
    </aside>
    <main class="mainHome">

        <div class="container">
            <div class="containerOpciones">
                <a onclick="location.href = '/home/1'">

                    <div class=" card grey lighten-5">
                        <div class="card-content white-text">
                            <figure>
                                <img src="../public/img/Agregar.png" alt="">
                            </figure>
                        </div>
                        <div class="card-action">
                            <h6>Registro</h6>
                        </div>
                    </div>
                </a>
                <a onclick="location.href = '/home/2'">

                    <div class="card grey lighten-5">
                        <div class="card-content white-text">
                            <figure>
                                <img src="../public/img/Actualizarinf.png" alt="">

                            </figure>
                        </div>
                        <div class="card-action">
                            <h6>Actualizar Informacion</h6>
                        </div>
                    </div>
                </a>
                <a onclick="location.href = '/home/3'">

                    <div class="card grey lighten-5">

                        <div class="card-content white-text">
                            <figure>
                                <img src="../public/img/AgreL.png" alt="">

                            </figure>
                        </div>
                        <div class="card-action">
                            <h6>Asignar Laboratorio</h6>
                        </div>
                    </div>
                </a>
                <a onclick="location.href = '/home/4'">
                    <div class="card grey lighten-5">
                        <div class="card-content white-text">
                            <figure>
                                <img src="../public/img/AsignarVol.png" alt="">

                            </figure>
                        </div>
                        <div class="card-action">
                            <h6>Asignar Voluntario</h6>
                        </div>
                    </div>
                </a>
            </div>
            <% if (menu == 1) { %>
            <% include agregarPersona.ejs %>
            <%} if(menu == 2) { %>
            <p> 2!</p>
            <%} if(menu == 3) { %>
            <p> 3!!!</p>
            <%} if(menu == 4) { %>
            <p> 4!!!</p>
            <% } %>

        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

</html>